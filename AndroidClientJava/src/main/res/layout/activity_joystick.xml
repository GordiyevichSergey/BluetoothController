<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.sergey.bluetoothmanager.JoystickActivity">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonDown"
        android:background="@drawable/down"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonLeft"
        android:background="@drawable/left"
        android:layout_above="@+id/buttonDown"
        android:layout_toLeftOf="@+id/buttonUp"
        android:layout_toStartOf="@+id/buttonUp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonUp"
        android:background="@drawable/up"
        android:layout_above="@+id/buttonLeft"
        android:layout_alignLeft="@+id/buttonDown"
        android:layout_alignStart="@+id/buttonDown" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonRight"
        android:background="@drawable/right"
        android:layout_below="@+id/buttonUp"
        android:layout_toRightOf="@+id/buttonUp"
        android:layout_toEndOf="@+id/buttonUp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonA"
        android:background="@drawable/round_button"
        android:layout_alignTop="@+id/buttonRight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="22dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonB"
        android:background="@drawable/round_button"
        android:text="B"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:layout_below="@+id/buttonA"
        android:layout_toLeftOf="@+id/buttonA"
        android:layout_toStartOf="@+id/buttonA" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonY"
        android:background="@drawable/round_button"
        android:text="Y"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:layout_above="@+id/buttonB"
        android:layout_toLeftOf="@+id/buttonB"
        android:layout_toStartOf="@+id/buttonB" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonX"
        android:background="@drawable/round_button"
        android:text="X"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:layout_alignBottom="@+id/buttonUp"
        android:layout_toRightOf="@+id/buttonY"
        android:layout_toEndOf="@+id/buttonY" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/buttonStart"
        android:background="#4b4949"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonSelect"
        android:layout_alignStart="@+id/buttonSelect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/buttonSelect"
        android:textColor="#ffffff"
        android:background="#4b4949"
        android:layout_alignTop="@+id/buttonRight"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
